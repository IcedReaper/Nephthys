{
    "PersonName" : {
        "rule" : "^([\\p{L},]+[\\s0-9\\.]*)*$",
        "description" : "A small validation rule for a person name",
        "tip" : ""
    },
    "Email" : {
        "rule" : "^([a-zA-Z0-9.-]+)@((?:[\\w-]+[^-]\\.)+)([a-zA-Z]{2,4})$",
        "description" : "",
        "tip" : ""
    },
    "String" : {
        "rule" : "^[\\w\\W]+$",
        "description" : "",
        "tip" : ""
    },
    "Number" : {
        "rule" : "^\\d*$",
        "description" : "",
        "tip" : ""
    },
    "ZipCode" : {
        "byCountry" : {
            "DE" : {
                "rule" : "^\\d{5}$",
                "description" : "",
                "tip" : "12345"
            },
            "GB" : {
                "rule" : "^[a-zA-Z0-9]{1,4} ?[a-zA-Z0-9]{1,3}$",
                "description" : "",
                "tip" : "AB1 2CD"
            }
        }
    }
}